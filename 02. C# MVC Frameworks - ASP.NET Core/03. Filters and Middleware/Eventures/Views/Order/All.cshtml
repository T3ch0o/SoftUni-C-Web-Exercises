@model List<Eventures.Models.ViewModels.OrderViewModel>

<div class="mt-3 mb-5 text-center">
    <h1 class="text-center">All Orders</h1>
    <hr class="hr-2 bg-dark" />
    <div class="container">
        <table class="table w-75 mx-auto table-hover">
            <thead>
                <tr class="row">
                    <th class="col-md-1">#</th>
                    <th class="col-md-6">Event</th>
                    <th class="col-md-2">Customer</th>
                    <th class="col-md-3">OrderOn</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr class="row">
                        <th class="col-md-1">@i</th>
                        <td class="col-md-6">@Model[i].EventName</td>
                        <td class="col-md-2">@Model[i].Customer</td>
                        <td class="col-md-3">@Model[i].OrderOn.ToString("MM/dd/yyyy HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>