 @if (!User.Identity.IsAuthenticated)
 {
     <div class="jumbotron mt-3 bg-color">
         <h1>Eventures - The best ticket service in the world.</h1>
         <hr class="bg-dark"/>
         <h3><a asp-controller="Account" asp-action="Login" class="nav-link-dark text-primary">Login</a> if you have an account.</h3>
         <h3><a asp-controller="Account" asp-action="Register" class="nav-link-dark text-primary">Register</a> if you don't.</h3>
     </div>
 }
 else
 {
     <div class="mt-3 mb-5">
         <div class="container-fluid text-center">
             <h2>Greetings, @User.Identity.Name!</h2>
             <h4>Enjoy your work today!</h4>
         </div>
         <hr class="hr-2 bg-dark"/>
     </div>
 }