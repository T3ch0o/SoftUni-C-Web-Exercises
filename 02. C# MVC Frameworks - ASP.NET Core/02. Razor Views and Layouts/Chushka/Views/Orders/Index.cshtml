@model List<Order>

<div class="mt-3 mb-5 text-center">
    <h1 class="text-center">All Orders</h1>
    <hr class="hr-2 bg-dark"/>
    <div class="container">
        <table class="table w-75 mx-auto table-hover">
            <thead>
            <tr class="row">
                <th class="col-md-1">#</th>
                <th class="col-md-1">Order ID</th>
                <th class="col-md-4">Customer</th>
                <th class="col-md-2">Product</th>
                <th class="col-md-4">Ordered On</th>
            </tr>
            </thead>
            <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr class="row">
                    <th class="col-md-1">@i</th>
                    <td class="col-md-1">@Model[i].Id</td>
                    <td class="col-md-4">@Model[i].Client.UserName</td>
                    <td class="col-md-2">@Model[i].Product.Name</td>
                    <td class="col-md-4">@Model[i].OrderOn.ToString("HH:mm MM/dd/yyyy")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
