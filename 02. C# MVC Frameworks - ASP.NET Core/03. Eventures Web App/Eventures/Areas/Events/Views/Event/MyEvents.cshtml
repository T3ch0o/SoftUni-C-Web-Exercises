@model List<Eventures.Areas.Events.ViewModels.MyOrderedEventsViewModel>

<div class="mt-3 mb-5 text-center">
    <h1 class="text-center">My Events</h1>
    <hr class="hr-2 bg-dark"/>
    <div class="container">
        <table class="table w-75 mx-auto table-hover">
            <thead>
            <tr class="row">
                <th class="col-md-1">#</th>
                <th class="col-md-4">Name</th>
                <th class="col-md-2">Start</th>
                <th class="col-md-2">End</th>
                <th class="col-md-3">Tickets</th>
            </tr>
            </thead>
            <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr class="row">
                    <th class="col-md-1">@i</th>
                    <td class="col-md-4">@Model[i].Name</td>
                    <td class="col-md-2">@Model[i].Start.ToString("MM/dd/yyyy HH:mm")</td>
                    <td class="col-md-2">@Model[i].End.ToString("MM/dd/yyyy HH:mm")</td>
                    <td class="col-md-3">@Model[i].TicketsCount</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>


